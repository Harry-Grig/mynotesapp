// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum Category {
  WORK
  PERSONAL
  STUDY
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  TODO
  IN_PROGRESS
  DONE
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  category    Category
  priority    Priority
  deadline    DateTime
  status      Status   @default(TODO)
  createdAt   DateTime @default(now())

  // Clerk user ID
  userId      String
}